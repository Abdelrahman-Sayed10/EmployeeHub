@model dynamic

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login/Signup Form</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/auth.css" rel="stylesheet" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <div class="container">
        <!-- LOGIN FORM -->
        <div class="form-box login">
            <form asp-controller="Account" asp-action="Login" method="post">
                <h1>Login</h1>
                <div class="input-box">
                    <input name="UserName" placeholder="Username" required>
                    <i class='bx bxs-user'></i>
                </div>
                <div class="input-box">
                    <input name="Password" type="password" placeholder="Password" required>
                    <i class='bx bxs-lock-alt'></i>
                </div>
                <div class="forgot-link">
                    <a href="#">Forgot Password?</a>
                </div>
                <button type="submit" class="btn">Login</button>
                <p>or login with social platforms</p>

                <div class="social-icons">
                    <button type="submit"
                            formnovalidate
                            formaction="@Url.Action("GoogleLogin", "Account")"
                            formmethod="post"
                            class="btn btn-google w-100">
                        <i class='bx bxl-google'></i> Login with Google
                    </button>
                </div>
                <p>Don't have an account? <a href="#" class="register-btn">Register here</a></p>
            </form>
        </div>

        <!-- REGISTER FORM -->
        <div class="form-box register">
            <form asp-controller="Account" asp-action="Register" method="post">
                <h1>Create an Account</h1>
                <div class="input-box">
                    <input name="UserName" placeholder="Username" required>
                    <i class='bx bxs-user'></i>
                </div>

                <div class="input-box">
                    <input name="Password" type="password" placeholder="Password" required>
                    <i class='bx bxs-lock-alt'></i>
                </div>

                <!-- Checkbox value is always submitted -->
                <input type="hidden" name="IsAdmin" value="false" />
                <div class="form-check text-start">
                    <input id="IsAdmin" name="IsAdmin" type="checkbox" class="form-check-input" value="true">
                    <label for="IsAdmin" class="form-check-label">Register as Admin</label>
                </div>

                <button type="submit" class="btn">Register</button>
                <p>Already have an account? <a href="#" class="login-btn">Login here</a></p>
            </form>
        </div>


        <!-- TOGGLE PANEL -->
        <div class="toggle-box">
            <div class="toggle-panel toggle-left">
                <h1>Hello, Welcome!</h1>
                <p>Don't have an account?</p>
                <button class="btn register-btn">Register</button>
            </div>

            <div class="toggle-panel toggle-right">
                <h1>Welcome Back!</h1>
                <p>Already have an account?</p>
                <button class="btn login-btn">Login</button>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/auth.js" asp-append-version="true"></script>
</body>
</html>
