@model EmployeeHub.Dtos.EmployeeDtos.EmployeeAddDto

@{
    ViewData["Title"] = "Add Employee";
}

<h2>Add Employee</h2>


<form asp-action="Add" method="post" class="row g-3">
    <div class="col-md-6">
        <div class="form-group mb-3">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group mb-3">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" placeholder="Enter email address" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group mb-3 form-check">
            <input asp-for="IsActive" type="checkbox" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label"></label>
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group mb-3">
            <label asp-for="DepartmentId" class="form-label"></label>
            <input asp-for="DepartmentId" class="form-control" />
            <span asp-validation-for="DepartmentId" class="text-danger"></span>
        </div>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>


@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
